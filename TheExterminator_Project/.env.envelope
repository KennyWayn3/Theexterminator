############################
# Application Environment
############################

# App environment
NODE_ENV=development

# Base URL of the backend API (used by frontend)
API_BASE_URL=http://localhost:3000

# Public app URL (used for redirects / links)
APP_PUBLIC_URL=http://localhost:5173


############################
# AI Configuration
############################

# API key for the LLM provider (server-side only)
# REQUIRED for AI interpretation features
AI_API_KEY=your_ai_api_key_here

# Model identifier (example values only)
AI_MODEL=gpt-4o-mini

# Max tokens for AI responses (keep small for safety)
AI_MAX_TOKENS=600

# Timeout for AI calls (milliseconds)
AI_TIMEOUT_MS=15000


############################
# Session Configuration
############################

# Maximum session length (minutes)
SESSION_TTL_MINUTES=90

# Maximum concurrent sessions per user
MAX_SESSIONS_PER_USER=1


############################
# Fly.io Kali Host
############################

# Base URL for the Fly.io Kali host
# Example: https://bb-kali-host.fly.dev
FLY_KALI_API_BASE=https://your-fly-app-name.fly.dev

# Fly API token (server-side only)
# Required if you create/destroy Fly machines programmatically
FLY_API_TOKEN=your_fly_api_token_here

# Default memory limit for Kali machines (MB)
KALI_VM_MEMORY_MB=1024

# Default CPU count for Kali machines
KALI_VM_CPUS=1


############################
# VNC Configuration
############################

# Internal VNC port exposed by Kali containers
VNC_PORT=5901

# Display resolution for VNC sessions
VNC_GEOMETRY=1280x800


############################
